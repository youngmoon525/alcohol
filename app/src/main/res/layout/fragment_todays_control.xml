<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Bottomnavi.Todays_Control_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/ivRed"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/circle" />
                <ImageView
                    android:id="@+id/ivGreen"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/circle" />
                <ImageView
                    android:id="@+id/ivBlue"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/circle" />
                <ImageView
                    android:id="@+id/ivYellow"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/circle" />
                <ImageView
                    android:id="@+id/ivViolet"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/circle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="레드"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="블루"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="그린"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="옐로"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="바이올렛"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:weightSum="100">


                <ImageView
                    android:id="@+id/ivLightEmpty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="12"

                    android:src="@drawable/light_bulb_64_empty" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="76"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/control_seekbar"
                    android:thumb="@drawable/seekbar_thumb"></SeekBar>

                <!-- SeekBar 로 기능 구현을 할 수 없을 경우 밝기 정도를 단계별로 나누고
                    한 단계 밝게 하기/어둡게 하기 버튼을 넣는 식으로 구현할 것 -->

                <ImageView
                    android:id="@+id/ivLightFill"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="12"

                    android:src="@drawable/light_bulb_64_fill" />

                <!--<TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="50%"
                    android:textSize="14sp" />-->

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#555555" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35">

            <TextView
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="술장고 \n 수동조작"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/switchFridge"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/control_switch" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/fridge_100" />


            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvLeft45"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="45도 좌회전"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvRight45"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="45도 우회전"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSpin180"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="180도 회전"
                    android:textSize="18sp" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="#555555" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35">

            <TextView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="무드 라이트"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/switchLight"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/control_switch" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/smart_light_64" />


            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSleep"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="취침등"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvFade"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="밝기 변화"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvColorChange"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="30"
                    android:background="@drawable/control_button"
                    android:gravity="center"
                    android:text="색상 변화"
                    android:textSize="18sp"/>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>