<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <!-- 위 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="회원가입"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


    <!-- 줄 -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4"
        app:layout_constraintTop_toBottomOf="@+id/header" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">




        <!-- mem_flavor    맛 -->
        <RadioGroup
            android:id="@+id/Group_flavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주로 좋아하시는 맛은 어떤 맛인가요?"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btn1_flavor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv1_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0~10"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn2_flavor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv2_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10~20"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn3_flavor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv3_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20~30"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn4_flavor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv4_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30~40"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RadioGroup>



        <!-- alcohol_bv 도수 -->
        <RadioGroup
            android:id="@+id/Group_alcohol_bv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/Group_flavor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신의 도수는 어느 정도인가요?"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btn1_alcohol_bv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv1_alcohol_bv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0~10"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn2_alcohol_bv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv2_alcohol_bv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10~20"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn3_alcohol_bv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv3_alcohol_bv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20~30"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn4_alcohol_bv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv4_alcohol_bv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30~40"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RadioGroup>



        <!-- smell 향 -->
        <RadioGroup
            android:id="@+id/Group_smell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/Group_alcohol_bv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주로 좋아하는 술의 향은 어떤 것인가요?"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btn1_smell"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/tv1_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fruit"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn2_smell"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv2_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="root"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn3_smell"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv3_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="grain"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn4_smell"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv4_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plant"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RadioGroup>


        <!-- alcohol_type 주종 -->
    <RadioGroup
        android:id="@+id/Group_alcohol_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/Group_smell">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주로 드시는 술의 주종은 어떤 것인가요?"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center">

            <RadioButton
                android:id="@+id/btn1_alcohol_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv1_alcohol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Takju"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/btn2_alcohol_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv2_alcohol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liqueur"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/btn3_alcohol_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv3_alcohol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yakju"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/btn4_alcohol_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv4_alcohol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soju"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/btn5_alcohol_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv5_alcohol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fruitWine"
                android:textSize="16sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RadioGroup>

    <!-- 바디감 -->
        <RadioGroup
            android:id="@+id/Group_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/Group_alcohol_type">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="술의 바디감은 어느 정도가 좋나요?"
                android:textSize="16sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btn1_body"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv1_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LightBody"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn2_body"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv2_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MidiumBody"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/btn3_body"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv3_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FullBody"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RadioGroup>




        <Button
            android:id="@+id/btnJoin"
            android:layout_width="150dp"
            android:layout_height="50sp"
            android:layout_below="@+id/Group_body"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:text="회원가입"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Group_body"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:text="취소"
            android:textSize="24sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>