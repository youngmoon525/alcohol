<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="100">


    <!--스크롤뷰-->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity"
        android:layout_weight="83">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--상단 탭-->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_horizontal">

                    <!--<ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/back_100"/>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:text="마이페이지"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#C6C4C4"
                app:layout_constraintBottom_toBottomOf="@+id/header" />
            <!--상단 탭-->



            <!--사용자 정보-->
            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintTop_toTopOf="@+id/view">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홍홍홍"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test@naver.com"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#C6C4C4"
                app:layout_constraintBottom_toBottomOf="@+id/info" />
            <!--사용자 정보-->

            <!--내 구독 정보 : 헤드 -->
            <LinearLayout
                android:id="@+id/small_head1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/info">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="내 구독 정보"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#C6C4C4"
                app:layout_constraintBottom_toBottomOf="@+id/small_head1" />
            <!--내 구독 정보 : 헤드 -->

            <!--내 구독 정보 : 리스트 -->
            <LinearLayout
                android:id="@+id/small_list1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toBottomOf="@+id/small_head1">

                <Button
                    android:id="@+id/btn_1_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="구독 내역"
                    android:textColor="#5A5A5A" />

                <Button
                    android:id="@+id/btn_1_2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="구독 환불 신청"
                    android:textColor="#5A5A5A" />

                <Button
                    android:id="@+id/btn_1_3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="취소 · 환불 내역"
                    android:textColor="#5A5A5A" />

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#C6C4C4"
                app:layout_constraintBottom_toBottomOf="@+id/small_list1" />

            <!--내 구독 정보 : 리스트 -->

            <!--회원 정보 : 헤드 -->
            <LinearLayout
                android:id="@+id/small_head2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/small_list1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="회원정보"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#C6C4C4"
                app:layout_constraintTop_toBottomOf="@+id/small_head2" />
            <!--회원정보 : 헤드 -->

            <!--회원정보 : 리스트 -->
            <LinearLayout
                android:id="@+id/small_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toTopOf="@+id/view3">

                <Button
                    android:id="@+id/btn_2_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="회원정보 수정"
                    android:textColor="#5A5A5A" />

                <Button
                    android:id="@+id/btn_2_2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="문의사항"
                    android:textColor="#5A5A5A" />

                <Button
                    android:id="@+id/btn_2_3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="로그아웃"
                    android:textColor="#5A5A5A" />

                <Button
                    android:id="@+id/btn_2_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#ffffff"
                    android:gravity="left|center_vertical"
                    android:text="회원탈퇴"
                    android:textColor="#5A5A5A" />

            </LinearLayout>
            <!--내 구독 정보 : 리스트 -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <!--스크롤뷰-->

    <!--tab프래그먼트를 위한 frame layout-->
    <FrameLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="17"
        />

    <!--tab프래그먼트를 위한 frame layout-->
</LinearLayout>


