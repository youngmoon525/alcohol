<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <!-- 위 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="회원가입"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 줄 -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <!-- 작성 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round"
            android:hint="이메일 입력"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FB2828" />

        <EditText
            android:id="@+id/etNickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round"
            android:hint="닉네임 입력"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/etNickname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FB2828" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etNickname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round"
            android:hint="비밀번호 입력"
            android:textSize="24sp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/tvPass"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/etPass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FB2828" />

        <EditText
            android:id="@+id/etPassch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etPass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round"
            android:hint="비밀번호 재입력"
            android:textSize="24sp"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/tvPassch"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/etPassch"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FB2828" />





        <RadioGroup
            android:id="@+id/genderGroup1"
            android:layout_below="@+id/etPassch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="center">

        <RadioButton
            android:id="@+id/btnMale"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="남"
            android:textSize="24sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/btnFemale"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvFemale"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="여"
            android:textSize="24sp"
            android:layout_weight="1"/>
        </LinearLayout>
        </RadioGroup>

        <EditText
            android:id="@+id/etAddr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/genderGroup1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round"
            android:hint="주소"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="150dp"
            android:layout_height="50sp"
            android:layout_below="@+id/etAddr"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:text="다음"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etAddr"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:text="취소"
            android:textSize="24sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>