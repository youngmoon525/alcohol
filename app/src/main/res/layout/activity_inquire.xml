<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMemInfo.InquireActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#696783"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="무엇을 도와드릴까요?"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#F1F0F0">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="구독 결제 방법을 변경하고 싶어요."
            android:textSize="20sp"
            android:gravity="left"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn1"
            android:text="구독 해지를하고 싶어요."
            android:textSize="20sp"
            android:gravity="left"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn2"
            android:text="구독 환불을 받고 싶어요."
            android:textSize="20sp"
            android:gravity="left"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn3"
            android:text="구독으로 받는 술은 어떻게 선정되나요?"
            android:textSize="20sp"
            android:gravity="left"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn4"
            android:text="..."
            android:textSize="20sp"
            android:gravity="left"/>

        <EditText
            android:id="@+id/edText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn5"
            android:background="#ffffff"
            android:hint="내용을 입력해주세요."
            android:paddingStart="15dp"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>