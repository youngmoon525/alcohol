<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <!--상단 탭-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/back_100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="타이틀"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- /상단 탭 -->
    <!-- 분리선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4" />
    <!-- /분리선 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:weightSum="100">


        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="일자"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvAl_List"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:text="구독박스 내용물"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="가격"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>
    <!-- 분리선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4" />
    <!-- /분리선 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="60dp" />

    </ScrollView>
    <!-- 분리선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4" />
    <!-- /분리선 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="구독 환불에 대한 안내 \n \n  구독 환불 불가 사유 \n 해당 구독월의 수령 물품과 그 구성품들이 최초 상태로부터 개봉, 분실, 손실, 파손, 오염, 사용된 경우 \n \n 환불 신청시 부담 비용에 대한 안내 \n 배송된 물품이 고지된 구독 혜택의 물품 목록과 다를 경우 구독을 환불하시거나 새로운 물품을 수령하실 수 있으며 이때 배송비는 당측에서 부담합니다. \n 고객님의 단순 변심에 의한 환불 신청일 경우, 물품의 반송 비용은 반송측에서 부담합니다. \n 환불 비용의 환급은 물품 반송과 확인이 끝난 후 이루어지며 반송 소요일, 거래 은행의 전산 처리에 따라 다소 시간이 걸릴 수 있습니다."
            android:textSize="16sp"/>

    </ScrollView>
    <!-- 분리선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#C6C4C4" />
    <!-- /분리선 -->

    <Button
        android:id="@+id/btnRefund"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="환불 신청"
        android:layout_gravity="center"/>


</LinearLayout>