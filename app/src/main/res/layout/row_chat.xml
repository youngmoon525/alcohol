<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:src="@drawable/chatbot"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="술장고"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:maxLines="15"
                android:padding="10dp"
                android:text="메세지 내용"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/edge3"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2020-03-12 12:30"
                android:layout_gravity="left"
                android:textSize="10dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/txt_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:maxLength="150"
                android:maxLines="15"
                android:padding="10dp"
                android:text="메세지 내용"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/edge3"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_date2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="2020-03-12 12:30"
                android:textSize="10dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linearmenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_below="@+id/LinearLayout3">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="이용 안내"
            android:textColor="#595959"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="제품 정보"
            android:textColor="#595959"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="결제 방법"
            android:textColor="#595959"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linearmenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_below="@+id/Linearmenu1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="환불방법"
            android:textColor="#595959"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:textColor="#595959"
            android:textSize="12dp"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="술장고 A/S"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edgetext"
            android:textColor="#595959"
            android:textSize="12dp"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="#807B7B"
            android:text="배송지 변경"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="70dp"
        android:layout_weight="1"
        android:background="@drawable/edgemoote"
        android:gravity="center"
        android:padding="6dp"
        android:shadowColor="#292929"
        android:text="고객서비스 상담사 채팅"
        android:textColor="#595959"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>


</LinearLayout>