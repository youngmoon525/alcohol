<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/dialog_background_round">

    <TextView
        android:id="@+id/option_codetype_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="타이틀"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/alcohol_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/alcohol_img"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:paddingLeft="45dp"
        android:text="test"
        android:textColor="#292929"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/alcohol_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/option_codetype_dialog_title_tv"
        tools:srcCompat="@drawable/poster_3" />

    <ImageView
        android:id="@+id/prev"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/previous" />

    <ImageView
        android:id="@+id/shared"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/option_codetype_dialog_title_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/kakaotalk" />


    <LinearLayout
        android:id="@+id/dialog_numbers_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/option_codetype_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="#272727"
            android:textSize="20sp" />
        <!--android:background="#757575"-->

    </LinearLayout>


</RelativeLayout>